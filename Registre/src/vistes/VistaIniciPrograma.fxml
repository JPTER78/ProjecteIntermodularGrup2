<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladors.VistaIniciProgramaController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="850.0" prefWidth="1600.0">
         <children>
            <ImageView fitHeight="480.0" fitWidth="944.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../Baixades/LogoSinFondo.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="75.0" top="75.0" />
               </VBox.margin>
            </ImageView>
            <HBox alignment="TOP_CENTER" prefHeight="260.0" prefWidth="1600.0" spacing="20.0">
               <children>
                  <Button fx:id="botoRegistre" mnemonicParsing="false" onAction="#entrarRegistre" prefHeight="75.0" prefWidth="225.0" text="Registre">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font></Button>
                  <Button fx:id="botoLogin" mnemonicParsing="false" onAction="#entrarLogin" prefHeight="75.0" prefWidth="225.0" text="Login">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font></Button>
                  <Button fx:id="botoEixir" mnemonicParsing="false" onAction="#eixirAplicacio" prefHeight="75.0" prefWidth="225.0" text="Eixir">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font></Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
